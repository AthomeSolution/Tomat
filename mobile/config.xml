<?xml version='1.0' encoding='utf-8'?>
<widget xmlns="http://www.w3.org/ns/widgets"
  xmlns:cdv="http://cordova.apache.org/ns/1.0"
  xmlns:gap="http://phonegap.com/ns/1.0"
  id="com.canal-du-nivernais.appli"
  version="1.3.3"
  android-versionCode="7">

  <name>Canal du Nivernais</name>
  <description>
    Visitez le canal du Nivernais
  </description>
  <author email="support@athome-solution.fr" href="http://www.athome-solution.fr">
    Athome Solution
  </author>
  <content src="index.html"/>
  <preference name="orientation" value="portrait" />
  <preference name="BackupWebStorage" value="local" />

  <icon src="res/icon/android/icon-96-xhdpi.png" />

  <platform name="android">
    <icon src="res/icon/android/icon-48-mdpi.png" density="mdpi" />
    <icon src="res/icon/android/icon-72-hdpi.png" density="hdpi" />
    <icon src="res/icon/android/icon-96-xhdpi.png" density="xhdpi" />
    <icon src="res/icon/android/icon-144-xxhdpi.png" density="xxhdpi" />
  </platform>

  <platform name="ios">
    <icon src="res/icon/ios/icon-29.png" width="29" height="29" />
    <icon src="res/icon/ios/icon-40.png" width="40" height="40" />
    <icon src="res/icon/ios/icon-58.png" width="58" height="58" />
    <icon src="res/icon/ios/icon-60.png" width="60" height="60" />
    <icon src="res/icon/ios/icon-76.png" width="76" height="76" />
    <icon src="res/icon/ios/icon-40-2x.png" width="80" height="80" />
    <icon src="res/icon/ios/icon-60-2x.png" width="120" height="120" />
    <icon src="res/icon/ios/icon-76-2x.png" width="152" height="152" />
    <gap:splash src="res/screen/ios/screen-iphone-portrait.png" width="640" height="960" />
    <gap:splash src="res/screen/ios/screen-iphone-portrait-2x.png" width="640" height="1136" />
    <gap:splash src="res/screen/ios/screen-ipad-portrait.png" width="768" height="1024" />
    <gap:splash src="res/screen/ios/screen-ipad-landscape.png" width="1024" height="768" />
  </platform>

  <access origin="*" />
</widget>
